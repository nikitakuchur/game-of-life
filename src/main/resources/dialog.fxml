<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="150.0" prefWidth="250.0"
      xmlns="http://javafx.com/javafx/8.0.291" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.nikitakuchur.automata.DialogController">
   <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="8.0" VBox.vgrow="ALWAYS">
      <padding>
         <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
      </padding>
      <Label contentDisplay="RIGHT" graphicTextGap="8.0" text="Width:">
         <graphic>
            <Spinner fx:id="widthSpinner" editable="true" />
         </graphic>
      </Label>
      <Label contentDisplay="RIGHT" text="Height:">
         <graphic>
            <Spinner fx:id="heightSpinner" editable="true" />
         </graphic>
      </Label>
      <CheckBox fx:id="toroidal" mnemonicParsing="false" text="Toroidal" />
   </VBox>
   <HBox alignment="TOP_RIGHT" prefWidth="200.0">
      <VBox.margin>
         <Insets />
      </VBox.margin>
      <padding>
         <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
      </padding>
      <Button mnemonicParsing="false" onAction="#handleOkButtonClick" text="Ok" />
   </HBox>
</VBox>
